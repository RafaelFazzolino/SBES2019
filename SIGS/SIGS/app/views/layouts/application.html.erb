<!--<!DOCTYPE html>-->
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>SIGS</title>
    <%= favicon_link_tag %>
    <meta name="robots" content="noindex, nofollow">
    <meta name="description" content="Sistema de Alocação de Salas Inteligente da UnB.">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag "particles", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "jquery.particleground.min", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "sidebar", "data-turbolinks-track" => true  %>

  </head>

  <body>
    <%= render 'layouts/alert' %>

    <% if current_user %>
      <%= render 'navbar/navbar' %>
      <div class="main-container">
        <%= render 'sidebar/sidebar' %>
        <div class="container p-2">
          <%= yield %>
        </div>
      </div>
    <% else %>
      <main class="container container-fluid myContainer">
        <%= yield %>
      </main>
    <% end %>
  </body>
</html>
